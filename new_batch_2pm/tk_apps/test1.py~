import tkinter as tk 

r  = tk.Tk()

s = """
healkjdfl
sadfklsdjfksd\'fksdfkl;sdjlkfjsdkl;fjsd
sdfjasldjf
fsdajklf;sdjfjsd'fsd
fjklsdf\sk
fjsdflksd
dsklfjasd
fjsdkl;fsd
fsdjfklsd
fsdjkl'f
ajsfksdjfl\sd
jkfsdfsj
dafjsdfkljsd'f"""

def mkwindow():
    r1 = tk.Tk()
    l = tk.Label(r1,text="Hey this is your Pop UP")
    l.pack()
    r1.mainloop()
l1 = tk.Label(r,text=s,fg='red')
l1.pack()
b = tk.Button(r,text='say',command=mkwindow)
b.pack()
r.mainloop()
